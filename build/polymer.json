{
  "entrypoint": "index.html",
  "shell": "src/webvr-app/webvr-app.html",
  "fragments": [
    "src/webvr-viewer/webvr-viewer.html",
    "src/image-gallery/image-gallery.html"
  ],
  "sources": [
    "src/**/*",
    "images/**/*",
    "assets/**/*",
    "package.json",
    "index.html",
    "src/webvr-app/webvr-app.html",
    "src/webvr-viewer/webvr-viewer.html",
    "src/image-gallery/image-gallery.html"
  ],
  "extraDependencies": [
    "bower_components/webcomponentsjs/*.js",
    "manifest.json",
    "node_modules/@webcomponents/webcomponentsjs/*.js"
  ],
  "builds": [
    {
      "name": "es5-bundled",
      "bundle": true,
      "js": {
        "minify": true,
        "compile": true
      },
      "css": {
        "minify": true
      },
      "html": {
        "minify": true
      },
      "addServiceWorker": true,
      "addPushManifest": true,
      "insertPrefetchLinks": true
    },
    {
      "name": "es6-bundled",
      "bundle": true,
      "browserCapabilities": [
        "es2015"
      ],
      "js": {
        "minify": true
      },
      "css": {
        "minify": true
      },
      "html": {
        "minify": true
      },
      "addServiceWorker": true,
      "addPushManifest": true,
      "insertPrefetchLinks": true
    }
  ],
  "lint": {
    "rules": [
      "polymer-2"
    ]
  }
}